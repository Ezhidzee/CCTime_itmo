<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android = "http://schemas.android.com/apk/res/android"
    android:id="@+id/myTemplate"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginEnd="10dp"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingStart="10dp"
    android:theme="@style/CarCleanTimeRecycleView">

        <TextView
            android:id="@+id/nightTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Night" />

        <TextView
            android:id="@+id/nightTempTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="4" />

        <TextView
            android:id="@+id/nightPOPTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="%" />

        <TextView
            android:id="@+id/nightDescriptionTV"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="облачно с прояснениями" />

        <TextView
            android:id="@+id/nightConditionDescriptionTV"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="9pt"
            android:text="Night" />

        <ImageView
            android:id="@+id/nightIV"
            android:layout_width="50dp"
            android:layout_height="50dp" />
    </LinearLayout>