<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:theme="@style/CarCleanTimeRecycleView"
    tools:ignore="ExtraText">

    <TextView
        android:id="@+id/dateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Date"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/dateTV"
        tools:ignore="MissingConstraints">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/nightTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Night" />

            <TextView
                android:id="@+id/nightTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="4" />

            <TextView
                android:id="@+id/nightPOPTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="%" />

            <TextView
                android:id="@+id/nightDescriptionTV"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="облачно с прояснениями" />

            <TextView
                android:id="@+id/nightConditionDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="9pt"
                android:text="Night" />

            <ImageView
                android:id="@+id/nightIV"
                android:layout_width="50dp"
                android:layout_height="50dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/morningTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Morning" />

            <TextView
                android:id="@+id/morningTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="7" />

            <TextView
                android:id="@+id/morningPOPTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="%" />

            <TextView
                android:id="@+id/morningDescriptionTV"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Norm" />

            <TextView
                android:id="@+id/morningConditionDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="9pt"
                android:text="Morning" />

            <ImageView
                android:id="@+id/morningIV"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/dayTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Day" />

            <TextView
                android:id="@+id/dayTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="8" />

            <TextView
                android:id="@+id/dayPOPTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="%" />

            <TextView
                android:id="@+id/dayDescriptionTV"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Norm" />

            <TextView
                android:id="@+id/dayConditionDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="9pt"
                android:text="Day" />

            <ImageView
                android:id="@+id/dayIV"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingStart="10dp"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/eveningTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Evening" />

            <TextView
                android:id="@+id/eveningTempTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="5" />

            <TextView
                android:id="@+id/eveningPOPTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="%" />

            <TextView
                android:id="@+id/eveningDescriptionTV"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Norm" />

            <TextView
                android:id="@+id/eveningConditionDescriptionTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textSize="9pt"
                android:text="Evening" />

            <ImageView
                android:id="@+id/eveningIV"
                android:layout_width="50dp"
                android:layout_height="50dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>